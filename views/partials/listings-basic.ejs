<section class="basiclist list-group lo-basic-list">
  <section class="lo-search-wrapper">
    <input
      class="searchinput"
      type="text"
      id="searchInput"
      onkeyup="searchBar()"
      placeholder="Search by trade, city, or business..."
    />
    <i class="fa-solid fa-magnifying-glass"></i>
  </section>
  <ul class="galleryUL" id="lo-basic-list">
    <% let sortedSchools = [...schools] %> <% sortedSchools.sort((a, b) => { %>
    <% if (a.name < b.name) { %> <% return -1; %> <% } %> <% }); %> <%
    sortedSchools.forEach(function(school, i) { %>
    <li class="listentry">
      <a
        class="list-group-item list-group-item-action"
        id="id-<%= i %>"
        href="#item-<%= i %>"
        // onclick="showInDepthInfo(<%= school._id %>)"
      >
        <section class="lo-list-img-side">
          <div class="lo-logo-wrapper">
            <img class="companylogo" src="<%= school.logoUrl %>" alt="Logo" />
          </div>
        </section>
        <section class="basiclistitemtextcontainer lo-list-text-side">
          <h6 class="basiclistitemOrganization"><%= school.name %></h6>
          <p class="basiclistitemCategory"><%= school.type %></p>
          <p class="basiclistitemTrade"><%= school.programs %></p>
          <p class="basiclistitemCity">
            <%= school.location.city %>, <%= school.location.state %>
          </p>
        </section>
      </a>
      <aside class="lo-save-listing">
        <form action="/user-likes" method="POST">
          <input type="hidden" name="school_id" value="<%= school._id %>" />
          <button class="icon-button" type="submit">
            <i
              class="fa-solid fa-heart <%= school.is_liked ? 'liked' : '' %>"
            ></i>
          </button>
        </form>
      </aside>
    </li>
    <% }); %>
  </ul>
</section>
